<h1> New Game </h1>
<h2><%= @random_string.each {|letter| print letter }%></h2>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :start_time, Time.now %>
  <%= hidden_field_tag :random_string, @random_string %>
  <input type="text" name="word" placeholder="Your word here!">
  <input type="submit">
</form>

